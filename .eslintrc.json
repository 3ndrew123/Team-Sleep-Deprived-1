{
    "env": {
        "es2021": true,
        "node": true,
        "browser": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "overrides": [
        {
            "files": [
              "**/*.test.js",
              "**/*.test.jsx",
              "*/docs/*"
            ],
            "env": {
              "jest": true
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "ignorePatterns": ["docs/*"],
    "globals": {
        "page": true,
        "browser": true,
        "context": true,
        "jestPuppeteer": true
    }
}
